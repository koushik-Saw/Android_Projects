<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_margin="10dp"
    tools:context=".ResturantUpload">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:id="@+id/chooseImgID"
        android:text="Choose Image"
        android:background="#B5134B"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurantUploadRB"
        android:numStars="5"
        android:layout_marginLeft="5dp"
        android:rating="2"
        android:stepSize="0.5"
         />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.16"
        android:id="@+id/editImgnameID"
        android:hint="Save Image"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="2.33"
        android:id="@+id/pasImgID"
        android:text="Save Image"
        android:layout_marginTop="5dp"
        android:src="@drawable/imageuploas"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:id="@+id/saveImgID"
        android:text="Save Image"
        android:background="#B5134B"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:id="@+id/displayImgID"
        android:text="Display Image"
        android:background="#A61144"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000"/>


</LinearLayout>