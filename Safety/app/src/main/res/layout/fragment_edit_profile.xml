<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.EditProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:background="@drawable/profile_border"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

        <Button
            android:id="@+id/profilepicselector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round"
            android:text="Choose Image"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Fullname"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Enter Full Name"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            tools:text="Koushik" />

        <EditText
            android:id="@+id/Address"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="10dp"
            android:hint="Enter Address"
            android:text=""
            android:textSize="24sp" />

        <EditText
            android:id="@+id/Edit_Phone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_supervisor_account_24"
            android:drawablePadding="10dp"
            android:hint="Enter Trusted Contact 1"
            android:inputType="phone"
            android:text=""
            android:textSize="24sp" />
        <EditText
            android:id="@+id/Edit_trusted"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_supervisor_account_24"
            android:drawablePadding="10dp"
            android:hint="Enter Trusted Contact 2"
            android:inputType="phone"
            android:text=""
            android:textSize="24sp" />
        <TextView
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:drawablePadding="10dp"
            android:hint="Email Address"
            android:paddingTop="5dp"
            android:textSize="24sp" />


        <Button
            android:id="@+id/Saveprofile"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round"
            android:text="Save"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>


</ScrollView>